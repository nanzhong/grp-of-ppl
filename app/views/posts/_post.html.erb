<div id="post-<%= post.id %>">
  <div class="post-level">
    <div class="post-container">
      <% if post.user.nil? %>
        <%= render :partial => 'posts/system_post', :locals => { :user_post => post, :group => group } %>
      <% else %>
        <%= render :partial => 'posts/user_post', :locals => { :user_post => post, :group => group } %>
      <% end %>
    </div>

    <div class="post-children" style="margin-left:10px; padding-left:10px; border-left:1px dashed #dddddd;">
      <div class="post-level-toggle">
        <% unless post.group.blank? || post.child_posts.empty? %>
          <a id="post-level-hide-<%= post.id %>" href="#" onclick="$('#post-level-<%= post.id %>').slideToggle(); $('#post-level-hide-<%= post.id %>').toggle(); $('#post-level-show-<%= post.id %>').toggle();"><i class="icon-minus"></i> Hide discussion...</a> 
          <a id="post-level-show-<%= post.id %>" style="display:none;" href="#" onclick="$('#post-level-<%= post.id %>').slideToggle(); $('#post-level-hide-<%= post.id %>').toggle(); $('#post-level-show-<%= post.id %>').toggle();"><i class="icon-plus"></i> Show discussion... <%= post.child_count %> posts hidden</a>
        <% end %>
      </div>

      <div id="post-level-<%= post.id %>">
        <% post.child_posts.desc(:created_at).each do |child_post| %>
          <%= render :partial => 'posts/post', :locals => { :post => child_post, :group => group } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
